<p id="notice"><%= notice %></p>

<h1>Scripts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Import</th>
      <th>Image</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.name %></td>
        <td><%= script.import %></td>
        <td><%= image_tag script.image, width:100 %></td>
        <td><%= script.link %></td>
        <td><%= link_to 'Show', script %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_script_path(script) %></td>
          <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Script', new_script_path %>
